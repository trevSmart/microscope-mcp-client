{
	"name": "microscope-mcp-client",
	"displayName": "MiCroscoPe",
	"title": "MiCroscoPe MCP client",
	"version": "0.0.3",
	"main": "build/index.js",
	"type": "module",
	"bin": {
		"microscope-mcp-client": "build/index.js"
	},
	"files": [
		"build/**/*",
		"examples/**/*"
	],
	"scripts": {
		"build": "npm run lint && tsc",
		"lint": "biome check . --write",
		"run:cli:local": "npm run build && export LOG_LEVEL=debug && node build/index.js --server '${TEST_MCP_SERVER:-./local-mcp-server/index.js}'",
		"run:cli:npx": "npm run build && node build/index.js --server npx:@modelcontextprotocol/server-everything --log-level debug",
		"test:cli": "npm run build && node scripts/test.mjs --automated",
		"test:1shot": "npm run build && node scripts/test.mjs --oneshot",
		"test": "npm run build && node scripts/test-library.mjs",
		"publish-package": "npm run build && ./scripts/publish.sh",
		"publish-package:skip-tests": "npm run build && ./scripts/publish.sh --skip-tests"
	},
	"keywords": [
		"mcp",
		"client",
		"repl",
		"model-context-protocol"
	],
	"author": "Trevor Smart",
	"license": "ISC",
	"description": "MiCroscoPe is a lightweight command-line client that enables exhaustive testing of our MCP servers by AI agents.",
	"homepage": "https://github.com/trevSmart/microscope-mcp-client#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/trevSmart/microscope-mcp-client"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.4",
		"dotenv": "^17.2.1"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"globals": "^16.3.0",
		"@biomejs/biome": "^2.2.2",
		"typescript": "^5.9.2"
	}
}
